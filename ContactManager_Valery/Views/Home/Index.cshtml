    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const API_URL = '/api/ContactsApi';
        let allContacts = [];
        let isOnline = navigator.onLine;

        document.addEventListener('DOMContentLoaded', function() {
            console.log('Contact Manager Pro - Initialized');
            
            // Мониторинг подключения
            window.addEventListener('online', () => {
                isOnline = true;
                document.getElementById('offlineIndicator').style.display = 'none';
                showToast('success', 'Подключение восстановлено');
            });
            
            window.addEventListener('offline', () => {
                isOnline = false;
                document.getElementById('offlineIndicator').style.display = 'block';
                showToast('sand', 'Потеряно подключение к интернету');
            });
            
            // Инициализация приложения
            initApplication();
        });

        function initApplication() {
            try {
                initEventListeners();
                initPhoneInputs();
                initCountryFlags();
                initFormValidation();
                initSearch();
                
                // Загружаем контакты с сервера
                loadContacts();
            } catch (error) {
                console.error('Ошибка инициализации:', error);
                showToast('error', 'Ошибка инициализации приложения');
            }
        }

        function showLoading(show) {
            let overlay = document.getElementById('loadingOverlay');
            
            if (show) {
                if (!overlay) {
                    overlay = document.createElement('div');
                    overlay.id = 'loadingOverlay';
                    overlay.className = 'loading-overlay';
                    overlay.innerHTML = '<div class="loading-spinner"></div>';
                    document.body.appendChild(overlay);
                }
                overlay.style.display = 'flex';
            } else if (overlay) {
                overlay.style.display = 'none';
            }
        }

        async function loadContacts() {
            if (!isOnline) {
                showToast('sand', 'Нет подключения к интернету. Используются локальные данные.');
                return;
            }
            
            showLoading(true);
            
            try {
                const response = await fetch(API_URL);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (Array.isArray(data)) {
                    allContacts = data;
                } else {
                    allContacts = [];
                }
                
                console.log(`Загружено ${allContacts.length} контактов`);
                
                // Обновляем статистику
                updateStats();
                
                if (allContacts.length === 0) {
                    showToast('sand', 'Контактов пока нет. Добавьте первый контакт.');
                }
                
            } catch (error) {
                console.error('Ошибка при загрузке контактов:', error);
                showToast('error', 'Не удалось загрузить контакты с сервера');
                
                // Показываем локальные данные если есть
                if (allContacts.length > 0) {
                    showToast('sand', 'Используются локальные данные');
                }
            } finally {
                showLoading(false);
            }
        }

        function updateStats() {
            const statsNumber = document.querySelector('.stats-number');
            if (statsNumber) {
                statsNumber.textContent = allContacts.length;
            }
        }

        function initEventListeners() {
            // Форма создания контакта
            const createForm = document.getElementById('createForm');
            if (createForm) {
                createForm.addEventListener('submit', handleCreateContact);
            }
            
            // Форма редактирования контакта
            const editForm = document.getElementById('editForm');
            if (editForm) {
                editForm.addEventListener('submit', handleUpdateContact);
            }
            
            // Делегирование событий для кнопок таблицы
            document.addEventListener('click', function(e) {
                // Кнопка редактирования
                if (e.target.closest('.edit-btn')) {
                    const btn = e.target.closest('.edit-btn');
                    openEditModal(btn);
                }
                
                // Кнопка удаления
                if (e.target.closest('.delete-btn')) {
                    const btn = e.target.closest('.delete-btn');
                    confirmDeleteContact(btn.dataset.id);
                }
            });
            
            // Сброс формы при закрытии модального окна
            document.getElementById('createModal').addEventListener('hidden.bs.modal', function() {
                document.getElementById('createForm').reset();
                document.getElementById('createForm').classList.remove('was-validated');
                document.querySelectorAll('.flag-option').forEach(f => f.classList.remove('active'));
            });
            
            document.getElementById('editModal').addEventListener('hidden.bs.modal', function() {
                document.getElementById('editForm').classList.remove('was-validated');
                document.querySelectorAll('#editCountryFlags .flag-option').forEach(f => f.classList.remove('active'));
            });
        }

        function initPhoneInputs() {
            // Инициализация для формы создания
            initPhoneInput('createPhoneCode', 'createPhoneNumber', 'createFullPhone');
            // Инициализация для формы редактирования
            initPhoneInput('editPhoneCode', 'editPhoneNumber', 'editFullPhone');
        }

        function initPhoneInput(countryCodeId, phoneNumberId, fullPhoneId) {
            const countryCodeSelect = document.getElementById(countryCodeId);
            const phoneNumberInput = document.getElementById(phoneNumberId);
            const fullPhoneInput = document.getElementById(fullPhoneId);
            
            if (!countryCodeSelect || !phoneNumberInput || !fullPhoneInput) return;
            
            // Форматирование номера телефона
            phoneNumberInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                const countryCode = countryCodeSelect.value;
                let formatted = formatPhoneNumber(value, countryCode);
                
                e.target.value = formatted;
                fullPhoneInput.value = countryCode + ' ' + formatted;
            });
            
            // Изменение кода страны
            countryCodeSelect.addEventListener('change', function() {
                phoneNumberInput.value = '';
                fullPhoneInput.value = '';
                
                switch(this.value) {
                    case '+7': phoneNumberInput.placeholder = 'XXX XXX-XX-XX'; break;
                    case '+375': phoneNumberInput.placeholder = 'XX XXX-XX-XX'; break;
                    case '+380': phoneNumberInput.placeholder = 'XXX XXX-XXX'; break;
                }
            });
        }

        function initCountryFlags() {
            // Инициализация флагов для формы создания
            initCountryFlagSelection('.country-flags-container .flag-option');
            // Инициализация флагов для формы редактирования
            initCountryFlagSelection('#editCountryFlags .flag-option');
        }

        function initCountryFlagSelection(flagSelector) {
            const flags = document.querySelectorAll(flagSelector);
            
            if (!flags.length) return;
            
            flags.forEach(flag => {
                flag.addEventListener('click', function() {
                    const code = this.getAttribute('data-code');
                    const targetId = this.getAttribute('data-target');
                    
                    const countryCodeSelect = document.getElementById(targetId);
                    if (countryCodeSelect) {
                        countryCodeSelect.value = code;
                        
                        // Активируем соответствующий флаг
                        flags.forEach(f => f.classList.remove('active'));
                        this.classList.add('active');
                        
                        // Обновляем формат поля телефона
                        const phoneNumberId = targetId.replace('PhoneCode', 'PhoneNumber');
                        const phoneInput = document.getElementById(phoneNumberId);
                        if (phoneInput) {
                            switch(code) {
                                case '+7': phoneInput.placeholder = 'XXX XXX-XX-XX'; break;
                                case '+375': phoneInput.placeholder = 'XX XXX-XX-XX'; break;
                                case '+380': phoneInput.placeholder = 'XXX XXX-XXX'; break;
                            }
                        }
                    }
                });
            });
        }

        function initFormValidation() {
            // Валидация форм
            const forms = document.querySelectorAll('form');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }

        function initSearch() {
            const searchInput = document.getElementById('searchInput');
            const clearSearchBtn = document.getElementById('clearSearch');
            
            if (!searchInput || !clearSearchBtn) return;
            
            // Поиск при вводе
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.trim().toLowerCase();
                
                if (searchTerm) {
                    clearSearchBtn.style.display = 'block';
                    filterContacts(searchTerm);
                } else {
                    clearSearchBtn.style.display = 'none';
                    showAllContacts();
                }
            });
            
            // Очистка поиска
            clearSearchBtn.addEventListener('click', function() {
                searchInput.value = '';
                clearSearchBtn.style.display = 'none';
                showAllContacts();
                searchInput.focus();
            });
        }

        async function handleCreateContact(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const form = e.target;
            const submitBtn = form.querySelector('button[type="submit"]');
            
            if (!isOnline) {
                showToast('sand', 'Нет подключения к интернету. Невозможно создать контакт.');
                return;
            }
            
            // Валидация формы
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }
            
            // Получаем данные формы
            const phone = document.getElementById('createFullPhone').value;
            if (!phone || phone.trim() === '') {
                showToast('error', 'Мобильный телефон обязателен');
                return;
            }
            
            // Проверяем длину телефона
            if (phone.length < 10) {
                showToast('error', 'Телефон слишком короткий');
                return;
            }
            
            const data = {
                Name: document.getElementById('createName').value.trim(),
                MobilePhone: phone,
                JobTitle: document.getElementById('createJob').value.trim() || null,
                BirthDate: document.getElementById('createBirthDate').value || null
            };
            
            // Проверяем имя
            if (data.Name.length < 2) {
                showToast('error', 'Имя должно содержать хотя бы 2 символа');
                return;
            }
            
            // Отключаем кнопку отправки
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Сохранение...';
            }
            
            showLoading(true);
            
            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showToast('success', result.message || 'Контакт успешно создан!');
                    
                    // Добавляем контакт в таблицу
                    addContactToTable(result.contact || data);
                    
                    // Закрываем модальное окно
                    const modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                    modal.hide();
                    
                    // Сбрасываем форму
                    form.reset();
                    form.classList.remove('was-validated');
                    
                } else {
                    // Показываем ошибки валидации
                    if (result.errors) {
                        showToast('error', result.errors.join('<br>'));
                    } else if (result.message) {
                        showToast('error', result.message);
                    } else {
                        showToast('error', 'Ошибка при создании контакта');
                    }
                }
                
            } catch (error) {
                console.error('Error:', error);
                showToast('error', 'Ошибка сети. Проверьте подключение.');
            } finally {
                // Включаем кнопку отправки
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-save me-2"></i>Сохранить контакт';
                }
                showLoading(false);
            }
        }

